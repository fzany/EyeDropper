<Window x:Class="EyeDropper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eye Dropper" Height="200" Width="220" Icon="ChooseColor.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2" Margin="3" Stroke="Black" StrokeThickness="1" x:Name="rectcolor" Fill="#FF2221"/>
        <TextBox Grid.Row="1" Margin="3 0" x:Name="txt" Text="#FF2221" FontSize="18"/>
        <Button Grid.Column="1" Grid.Row="1" Width="25" Height="25" Margin="3" Click="Button_Click">
            <Image Source="eyedropper.png" Margin="1" />
        </Button>
    </Grid>
</Window>
